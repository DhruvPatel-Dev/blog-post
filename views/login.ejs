    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body>
   
    <div class="w-full min-h-screen bg-zinc-900 text-white p-10">
    <h1>Login</h1>

        <form action="/login" method="post">
           
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="email" name="email" placeholder="email">
            <input class="px-3 py-2 rounded-md outline-none bg-transparent border-2 border-zinc-800" type="password" name="password" placeholder="password">
            <input class="bg-green-600 rounded-md px-4 py-2 " type="submit" value="Login">
        </form>
        <a class="px-2 py-0 rounded-md bg-blue-600" href="/">Home</a>
    </div>
    
</body>
